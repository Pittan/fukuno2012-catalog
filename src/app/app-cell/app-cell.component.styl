:host
  border 2px solid #e0e0e0
  border-radius 5px
  display flex
  margin 5px
  height 270px
  width 270px
  flex-direction column
  align-items center
  font-size 18px
  background-color #ffffff
  padding 8px

  .title
    margin 5px 0

  .image
    height 160px
    width 250px
    background-size contain
    background-position center
    background-repeat no-repeat
    cursor pointer

    &:hover
      opacity 0.6

  .tags
    display flex
    width 180px
    justify-content center
    flex-wrap wrap

    .tag
      font-size 14px
      padding 3px 6px
      border-radius 5px
      color white
      background-color #818181
      display block
      text-decoration none
      margin 0 5px 5px