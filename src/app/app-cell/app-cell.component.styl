:host
  border 2px solid #e0e0e0
  border-radius 5px
  display flex
  margin 5px
  height 270px
  width 270px
  flex-direction column
  align-items center
  font-size 18px
  background-color #ffffff
  padding 8px

  .image
    height 100px
    width 100px
    background-size contain
    background-position center
    background-repeat no-repeat
    cursor pointer

    &:hover
      opacity 0.6
